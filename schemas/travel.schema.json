{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.4/travel.schema.json",
  "title": "Hopscotch v0.4 Travel",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "from",
    "to",
    "distanceOrDuration"
  ],
  "properties": {
    "type": {
      "const": "travel"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "from": {
      "type": "string",
      "minLength": 1
    },
    "to": {
      "type": "string",
      "minLength": 1
    },
    "distanceOrDuration": {
      "type": "string",
      "minLength": 1
    },
    "paceRules": {
      "type": "string"
    },
    "navCheck": {
      "type": "string",
      "minLength": 1
    },
    "randomEncountersRef": {
      "type": [
        "string",
        "object"
      ]
    },
    "environmentRules": {
      "type": "string"
    },
    "tables": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
