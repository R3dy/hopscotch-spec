{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/link.schema.json",
  "title": "Hopscotch v0.5 Link",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "from",
    "to",
    "linkType"
  ],
  "properties": {
    "type": {
      "const": "link"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "from": {
      "type": "string",
      "minLength": 1
    },
    "to": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "linkType": {
      "type": "string",
      "enum": [
        "narrative_branch",
        "narrative_linear",
        "mechanical"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
