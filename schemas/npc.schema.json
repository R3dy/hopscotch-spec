{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/npc.schema.json",
  "title": "Hopscotch v0.5 NPC",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "scope"
  ],
  "properties": {
    "type": {
      "const": "npc"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "alignment": {
      "type": "string"
    },
    "ancestry": {
      "type": "string"
    },
    "disposition": {
      "type": "string",
      "enum": ["enemy", "neutral", "ally"]
    },
    "faction": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "voice": {
      "type": "string"
    },
    "mannerisms": {
      "type": "string"
    },
    "emotionalBaseline": {
      "type": "string"
    },
    "breakingPoint": {
      "type": "string"
    },
    "personality": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "motivations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "role": {
      "type": "string"
    },
    "statblock": {
      "type": "string"
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    },
    "knows": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "$ref": "#/$defs/refObject"
          }
        ]
      }
    },
    "hides": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "$ref": "#/$defs/refObject"
          }
        ]
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
