{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.4/npc.schema.json",
  "title": "Hopscotch v0.4 NPC",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "scope"
  ],
  "properties": {
    "type": {
      "const": "npc"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "alignment": {
      "type": "string"
    },
    "ancestry": {
      "type": "string"
    },
    "role": {
      "type": "string"
    },
    "statblock": {
      "type": "string"
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    },
    "knows": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
