{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/table.schema.json",
  "title": "Hopscotch v0.5 Table",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "headers",
    "rows"
  ],
  "properties": {
    "type": {
      "const": "table"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^table\\."
    },
    "headers": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "title": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  }
}
