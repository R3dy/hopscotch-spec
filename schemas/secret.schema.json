{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/secret.schema.json",
  "title": "Hopscotch v0.5 Secret",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "scope",
    "text"
  ],
  "properties": {
    "type": {
      "const": "secret"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "reveal": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "by",
          "method"
        ],
        "properties": {
          "by": {
            "type": "string",
            "minLength": 1
          },
          "method": {
            "type": "string",
            "minLength": 1
          },
          "checkRef": {
            "type": "string",
            "minLength": 1
          },
          "dc": {
            "type": "integer",
            "minimum": 0
          },
          "when": {
            "type": "string"
          }
        }
      }
    },
    "leadsTo": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
