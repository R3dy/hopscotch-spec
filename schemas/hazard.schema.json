{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/hazard.schema.json",
  "title": "Hopscotch v0.5 Hazard",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "scope",
    "trigger",
    "effect"
  ],
  "properties": {
    "type": {
      "const": "hazard"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "trigger": {
      "type": "string",
      "minLength": 1
    },
    "effect": {
      "type": "string",
      "minLength": 1
    },
    "save": {
      "type": "string"
    },
    "dc": {
      "type": "integer",
      "minimum": 0
    },
    "damage": {
      "type": "string"
    },
    "disarm": {
      "type": "string",
      "minLength": 1
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
