{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/destination.schema.json",
  "title": "Hopscotch v0.5 Destination",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "parent",
    "kind"
  ],
  "properties": {
    "type": {
      "const": "destination"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "parent": {
      "type": "string",
      "minLength": 1,
      "pattern": "^region\\."
    },
    "kind": {
      "type": "string",
      "enum": [
        "settlement",
        "dungeon",
        "outpost",
        "wilderness",
        "ruin",
        "ship",
        "other"
      ]
    },
    "summary": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
