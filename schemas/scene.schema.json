{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/scene.schema.json",
  "title": "Hopscotch v0.5 Scene",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "title",
    "summary"
  ],
  "properties": {
    "type": {
      "const": "scene"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "location": {
      "type": "string",
      "minLength": 1
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "timing": {
      "type": "string"
    },
    "tone": {
      "type": "string"
    },
    "dialogue": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dialogueBlock"
      }
    },
    "outcomes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "possible": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/sceneOutcome"
          }
        }
      }
    },
    "conditions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enterIf": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/simpleCondition"
          }
        },
        "skipIf": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/simpleCondition"
          }
        }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "gates": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "tables": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    },
    "hasSecretCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "hasSecret"
      ],
      "properties": {
        "hasSecret": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "notCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "not"
      ],
      "properties": {
        "not": {
          "$ref": "#/$defs/hasSecretCondition"
        }
      }
    },
    "clockAtLeastCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "clockAtLeast"
      ],
      "properties": {
        "clockAtLeast": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "id",
            "track",
            "days"
          ],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "track": {
              "type": "string",
              "minLength": 1
            },
            "days": {
              "type": "number"
            }
          }
        }
      }
    },
    "simpleCondition": {
      "oneOf": [
        {
          "$ref": "#/$defs/hasSecretCondition"
        },
        {
          "$ref": "#/$defs/notCondition"
        },
        {
          "$ref": "#/$defs/clockAtLeastCondition"
        }
      ]
    },
    "dialogueBlock": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "speaker": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "read_aloud",
            "dm_guidance",
            "conditional",
            "likely_actions",
            "mechanics"
          ]
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "action": {
          "type": "string",
          "minLength": 1
        },
        "response": {
          "type": "string",
          "minLength": 1
        },
        "subItems": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/condition"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "read_aloud"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "dm_guidance"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "conditional"
              }
            }
          },
          "then": {
            "required": [
              "conditions"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "likely_actions"
              }
            }
          },
          "then": {
            "required": [
              "action",
              "response"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "mechanics"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ]
          }
        }
      ]
    },
    "condition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "if",
        "says"
      ],
      "properties": {
        "if": {
          "type": "string",
          "pattern": "^!?[A-Za-z][A-Za-z0-9_-]*(\\.[A-Za-z][A-Za-z0-9_-]*)*(\\s*(\\&\\&|\\|\\|)\\s*!?[A-Za-z][A-Za-z0-9_-]*(\\.[A-Za-z][A-Za-z0-9_-]*)*)*$"
        },
        "says": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "sceneOutcome": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "unlocks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "blocks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
