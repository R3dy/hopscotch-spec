{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.3/scene.schema.json",
  "title": "Hopscotch v0.3 Scene",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "title",
    "summary"
  ],
  "properties": {
    "type": {
      "const": "scene"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "location": {
      "type": "string",
      "minLength": 1
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "timing": {
      "type": "string"
    },
    "tone": {
      "type": "string"
    },
    "dialogue": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dialogueBlock"
      }
    },
    "outcomes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "possible": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/sceneOutcome"
          }
        }
      }
    }
  },
  "$defs": {
    "dialogueBlock": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "speaker": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "read_aloud",
            "dm_guidance",
            "conditional"
          ]
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/condition"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "read_aloud"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "dm_guidance"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "conditional"
              }
            }
          },
          "then": {
            "required": [
              "conditions"
            ]
          }
        }
      ]
    },
    "condition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "if",
        "says"
      ],
      "properties": {
        "if": {
          "type": "string",
          "pattern": "^!?[A-Za-z][A-Za-z0-9_-]*(\\.[A-Za-z][A-Za-z0-9_-]*)*(\\s*(\\&\\&|\\|\\|)\\s*!?[A-Za-z][A-Za-z0-9_-]*(\\.[A-Za-z][A-Za-z0-9_-]*)*)*$"
        },
        "says": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "sceneOutcome": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "unlocks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "blocks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
