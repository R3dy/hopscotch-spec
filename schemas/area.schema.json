{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.5/area.schema.json",
  "title": "Hopscotch v0.5 Area",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "parent"
  ],
  "properties": {
    "type": {
      "const": "area"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "parent": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(destination|location)\\."
    },
    "summary": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "key": {
      "type": "string",
      "minLength": 1
    },
    "readAloud": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "exits": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "gates": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "devices": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
