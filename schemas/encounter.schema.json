{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.4/encounter.schema.json",
  "title": "Hopscotch v0.4 Encounter",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "name",
    "scope",
    "encounterType",
    "trigger"
  ],
  "properties": {
    "type": {
      "const": "encounter"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "encounterType": {
      "type": "string",
      "enum": [
        "combat",
        "social",
        "exploration",
        "puzzle",
        "mixed"
      ]
    },
    "trigger": {
      "type": "string",
      "minLength": 1
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "ref"
        ],
        "properties": {
          "ref": {
            "type": "string",
            "minLength": 1
          },
          "count": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "skill",
              "dc"
            ],
            "properties": {
              "skill": {
                "type": "string",
                "minLength": 1
              },
              "dc": {
                "type": "integer",
                "minimum": 0
              },
              "resolution": {
                "$ref": "#/$defs/checkResolution"
              },
              "onSuccess": {
                "type": [
                  "string",
                  "object"
                ]
              },
              "onFail": {
                "type": [
                  "string",
                  "object"
                ]
              }
            }
          }
        ]
      }
    },
    "hazards": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "gates": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "devices": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "tables": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "rewards": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "escalation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "toEncounter": {
          "type": "string",
          "minLength": 1
        },
        "advanceClock": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "id",
            "amount"
          ],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "amount": {
              "type": "number"
            }
          }
        }
      }
    },
    "notes": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/refObject"
      }
    }
  },
  "$defs": {
    "refObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        }
      }
    },
    "hasSecretCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "hasSecret"
      ],
      "properties": {
        "hasSecret": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "notCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "not"
      ],
      "properties": {
        "not": {
          "$ref": "#/$defs/hasSecretCondition"
        }
      }
    },
    "clockAtLeastCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "clockAtLeast"
      ],
      "properties": {
        "clockAtLeast": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "id",
            "track",
            "days"
          ],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "track": {
              "type": "string",
              "minLength": 1
            },
            "days": {
              "type": "number"
            }
          }
        }
      }
    },
    "simpleCondition": {
      "oneOf": [
        {
          "$ref": "#/$defs/hasSecretCondition"
        },
        {
          "$ref": "#/$defs/notCondition"
        },
        {
          "$ref": "#/$defs/clockAtLeastCondition"
        }
      ]
    },
    "checkResolution": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "skill"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "dc",
            "opposed"
          ]
        },
        "skill": {
          "type": "string",
          "minLength": 1
        },
        "dc": {
          "type": "number",
          "minimum": 0
        },
        "alternatives": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "opposedBy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ref": {
              "type": "string",
              "minLength": 1
            },
            "skill": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "advantageWhen": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/simpleCondition"
          }
        },
        "disadvantageWhen": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/simpleCondition"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "dc"
              }
            }
          },
          "then": {
            "required": [
              "dc"
            ]
          }
        }
      ]
    }
  }
}
