{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/hopscotch/0.4/ruleRef.schema.json",
  "title": "Hopscotch v0.4 Rule Reference",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "source",
    "name"
  ],
  "properties": {
    "type": {
      "const": "ruleRef"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^rule\\."
    },
    "source": {
      "type": "string",
      "enum": [
        "srd",
        "phb",
        "dmg",
        "custom",
        "other"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "uri": {
      "type": "string",
      "minLength": 1
    },
    "section": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
